BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        Button:
            id: clear_button
            text: 'Clear'
            on_press: app.clear_input()
            size_hint_x: 0.25
            font_size: 30
        TextInput:
            id: input_name
            text: 'Test'
            font_size: 30
            multiline: False
    BoxLayout:
        orientation: 'horizontal'
        Button:
            id: greet_button
            text: 'Greet'
            on_press: app.handle_greet()
            size_hint_x: 0.25
            font_size: 30
        Label:
            id: output_label
            text: 'Test'
            font_size: 30